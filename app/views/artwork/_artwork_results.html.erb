<% @artworks.each do |artwork| %>
  <div class="col-xs-12 col-md-4">
    <%= link_to artwork_path(artwork) do %>
      <% if artwork.photo? %>
        <% img = cl_image_path artwork.photo %>
      <% else %>
        <% img = image_path 'logo.png' %>
      <% end %>
      <div class="card" style="background-image: url('<%= img %>')">
        <div class="overlay">
          <div class="card-category">
            <%= artwork.user.first_name %>
          </div>
          <div class="card-description">
            <h2><%= artwork.title %></h2>
            <p><%= artwork.category  %></p>
          </div>
          <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/jordas"> -->
          <% if artwork.user.facebook_picture_url? %>
            <%= cl_image_tag artwork.user.facebook_picture_url, class: "card-user" %>
          <% elsif artwork.user.google_picture_url? %>
            <%= cl_image_tag artwork.user.google_picture_url, class: "card-user" %>
          <% else %>
            <%= cl_image_tag "Laury-avatar_phbc9i", class: "card-user" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
