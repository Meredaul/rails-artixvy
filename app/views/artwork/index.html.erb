<div class="container">
  <div class="row">
    <h1>Artwork</h1>

    <% @artworks.each do |artwork| %>
        <div class="col-xs-12 col-sm-4">
      <%= link_to artwork_path(artwork) do %>
      <% if artwork.photo? %>
        <% img = cl_image_path artwork.photo %>
      <% else %>
        <% image_path 'logo.png' %>
      <% end %>
          <div class="card" style="background-image: url('<%= img %>')">
            <div class="card-category">Jordan Picasso</div>
              <div class="card-description">
                <h2><%= artwork.title %></h2>
                <p><%= artwork.category  %></p>
              </div>
                <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/jordas">
          </div>
      <% end %>
        </div>
    <% end %>

    <div id="map" style="width: 100%; height: 600px;"></div>

  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
      markers = handler.addMarkers(<%= raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  <% end %>
<% end %>

