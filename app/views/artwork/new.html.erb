<div class='background_creation_image'>
  <div class='container' >

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>New Artwork</h1>
          <%= simple_form_for @artwork, url: artwork_index_path do |f| %>

            <%= f.input :title  %>
            <%= f.input :category  %>
            <%= f.input :price  %>
            <%= f.input :size  %>
            <%= f.input :photo %>

            <%= f.input :address, id: 'artwork_address' %>
            <%= f.input :zip_code, id: 'artwork_zip_code' %>
            <%= f.input :city, id: 'artwork_city' %>
            <%= f.input :country, priority: [ 'FR' ] %>

            <%= f.submit class: 'btn btn-primary' %>

          <% end %>
        </div>
      </div>

  </div>
</div>
